<!DOCTYPE html>
<html>
  <head>
    <title>Postal</title>
    <style>
      .floc {
        position: fixed;
        color: red;
        top: 0%;
      }
    </style>
  </head>
  <body>
    <span class="floc">‚ùÜ</span>
    x x x x x x <br/>
    x x x x x x <br/>
    <script>
      let floc = document.querySelector('.floc');
      floc.style.top = '-10%';

      setInterval(() => {
        incrementa(2 * Math.random());
      }, 40);

      function incrementa(quantitat) {
        let top = parseInt(floc.style.top)
        floc.style.top = top + quantitat + '%';
        if (top + quantitat >= 100)
          floc.style.top = '-10%';
      }
    </script>
  </body>
</html>